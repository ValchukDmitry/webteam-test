<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.amazonaws.services.lambda.runtime.log4j2">
    <Appenders>
        <Lambda name="Lambda">
            <JsonLayout>
                <KeyValuePair key="Source" value="RSA"/>
                <KeyValuePair key="JobId" value="$${rsalog4jlookup:jobid}"/>
                <KeyValuePair key="CloudWatch.LogGroup" value="$${rsalog4jlookup:loggroup}"/>
                <KeyValuePair key="CloudWatch.LogStream" value="$${rsalog4jlookup:logstream}"/>
            </JsonLayout>
        </Lambda>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Lambda" />
        </Root>
    </Loggers>
</Configuration>